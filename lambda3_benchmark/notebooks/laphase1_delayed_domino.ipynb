# %%
# データ生成
from lambda3_benchmark.data_generation.delayed_domino import *

config = DelayedDominoConfig(
    T=500, N=5, tau=5, beta=2.0, 
    noise_level=0.3, n_datasets=10
)

datasets = generate_dataset_batch(config)
print(f"Generated {len(datasets)} datasets")

# %%
# Lambda3 検出
from lambda3_benchmark.methods.lambda3_detector import Lambda3Detector

detector_l3 = Lambda3Detector()
results_l3 = []

for ds in datasets:
    print(f"Processing {ds['id']}...")
    result = detector_l3.detect(ds['data'])
    results_l3.append(result)

# %%
# VAR 検出
from lambda3_benchmark.methods.var_detector import VARDetector

detector_var = VARDetector(max_lag=10)
results_var = []

for ds in datasets:
    result = detector_var.detect(ds['data'])
    results_var.append(result)

# %%
# 評価
from lambda3_benchmark.evaluation.metrics import calculate_metrics

ground_truths = [ds['ground_truth'] for ds in datasets]

metrics_l3 = calculate_metrics(results_l3, ground_truths)
metrics_var = calculate_metrics(results_var, ground_truths)

print("Lambda3:", metrics_l3)
print("VAR:", metrics_var)

# %%
# 可視化
import matplotlib.pyplot as plt
import seaborn as sns

methods = ['Lambda3', 'VAR']
accuracies = [metrics_l3['accuracy'], metrics_var['accuracy']]

plt.figure(figsize=(8, 5))
plt.barh(methods, accuracies, color=['#2E86AB', '#A23B72'])
plt.xlabel('Detection Accuracy')
plt.title('Phase 1: Delayed Domino Detection')
plt.xlim(0, 1)
plt.grid(axis='x', alpha=0.3)
plt.show()
